extends ../layouts/default

block main
  .page-header
    h1 Users

block content
  each user in users
    .user
      a.title(href='/user/'+user._id, title=user.title) #{user.title}
      p=user.body
      .author
        ul
          li
            a(href="/users/"+user.id)=user.name
        if (user.tags)
          span.tags
            span Tags :&nbsp;
            each tag in user.tags.split(',')
              a.tag(href="/tags/"+tag)
                i.icon-tags
                |  #{tag}

  if (pages > 1)
    .pagination
      ul
        != createPagination(pages, page)
