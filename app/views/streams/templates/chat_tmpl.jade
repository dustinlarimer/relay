script#chat_box(type='text/html')
  .chat-box(data-user='{{ nickname }}', data-provider='{{ provider }}', data-type='{{ type }}')
    //div(class="avatar avatar-{{ provider }}", style="display: none")
    //  img(src='http://avatars.io/{{ provider }}/{{ nickname }}')
    //  a(href="https://{{ provider }}.com/{{ nickname }}")
    h5
      | {{ nickname }}
    {{> chat_box_text }}

script#chat_box_text(type='text/html')
  p
    span.date(style="margin-right: 20px;") {{ time.hours }}:{{ time.minutes }} {{ time.meridiem }}
    | {{ msg }}

script#chat_notice(type='text/html')
  .notice(data-user="{{ user }}", style="background: #e5e5e5; color: #666; display: block; font-size: 11px")
    span.date {{ time.hours }}:{{ time.minutes }} {{ time.meridiem }}
    |  {{ noticeMsg }}

script#people_box(type='text/html')
  a(class='{{ status }}', href='#', data-username='{{ nickname }}', data-provider='{{ provider }}')
    b
    | {{ nickname }}

script#title_template(type='text/html')
  | {{#count}} ({{ count }}) {{/count}} {{ roomName }} - Harbor
